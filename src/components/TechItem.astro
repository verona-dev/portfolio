---
import {Icon} from 'astro-icon/components';
import { Tooltip, TooltipTrigger, TooltipContent } from '@/components/starwind/tooltip';
const {
   name,
   icon,
   description,
   url,
} = Astro.props;
---


<div class='tech-item'>
    <Tooltip>
        <TooltipTrigger>
            <div class='tech-icon opacity-0'>
                <Icon
                    name={icon}
                    class='w-12 h-12'
                />

                <p class='tech-name'>{ name }</p>
            </div>
        </TooltipTrigger>

        <TooltipContent side='bottom'>
            <a
                href={url}
                target='_blank'
                rel='noopener noreferrer'
                aria-label='Link to description'
                class='inline'
            >
                <span class='text-accent underline'>{name}</span>
            </a>

            <span set:html={description.replace(name, '')}></span>

        </TooltipContent>
    </Tooltip>
</div>

<style>
    .tech-item {
        align-items: center;
        display: flex;
        flex-direction: column;
        margin: 20px;

        &:hover {
            cursor: pointer;
        }

        svg {
            margin: 0 25px;
        }

        p {
            letter-spacing: 0.1em;
            margin: 5px 0;
        }

        .starwind-tooltip-content {
            background-color: var(--color-zinc-900);
            display: none;
            font-size: 14px;
            padding: 40px;
            --tooltip-offset: calc(100% + 20px) !important;
            white-space: normal;
            width: 400px;

            &:hover {
                cursor: auto;
            }

            /* Tablet/Mobile */
            @media (max-width: 900px) {
                padding: 40px 20px;
                width: 70vw;
            }
        }
    }
</style>