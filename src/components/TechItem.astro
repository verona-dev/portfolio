---
import {Icon} from 'astro-icon/components';
import { Tooltip, TooltipTrigger, TooltipContent } from '@/components/starwind/tooltip';
const {
   name,
   icon,
   description,
   url,
} = Astro.props;
---


<div class='tech-item mx-7 lg:mx-5 my-10'>
    <Tooltip openDelay={400}>
        <TooltipTrigger>
            <div class='tech-icon opacity-0'>
                <Icon
                    name={icon}
                    class='w-12 h-12 mx-8'
                />

                <p class='my-5'>{ name }</p>
            </div>
        </TooltipTrigger>

        <TooltipContent side='bottom'>

            <div class='card card-side bg-base-100 shadow-sm'>
                <div class='info-icon-container w-[100px]'>
                    <Icon
                        name='arcticons:devinfo'
                        class='w-full h-full'
                    />
                </div>

                <div class='card-body basis-xs'>


                    <span class='mb-3 text-left'>{description}</span>

                    <div class='card-actions justify-center'>
                        <a
                            href={url}
                            target='_blank'
                            rel='noopener noreferrer'
                            aria-label='Link to description'
                            class='btn btn-soft'
                        >
                            <span>Learn more</span>
                        </a>
                    </div>
                </div>
            </div>
        </TooltipContent>
    </Tooltip>
</div>

<style>
    .tech-item {
        align-items: center;
        display: flex;
        flex-direction: column;

        &:hover {
            cursor: pointer;
        }

        &:hover svg,
        &:hover p {
            opacity: 0.8;
        }

        /*  Tooltip content */
        .starwind-tooltip-content {
            background-color: var(--color-pink-400);
            display: none;
            display: flex;
            //font-size: 14px;
            //flex-direction: column;
            justify-content: center;
            align-items: center;
            align-content: center;
            padding: 1px;
            --tooltip-offset: calc(100% - 15px) !important;
            white-space: normal;
            height: 225px;
            width: 500px;

            &:hover {
                cursor: auto;
            }

            .card {
                height: 100%;
                padding: 10px;
            }

            .card-body {
                display: flex;
                justify-content: center;
                margin-top: 20px;
                //padding: 0;
                //padding: 0 20px 0 10px;

                //padding: var(--card-p, 0.5rem);
            }

            /* Tablet/Mobile */
            @media (max-width: 900px) {
                //padding: 40px 20px;
                //width: 70vw;
            }
        }
    }
</style>