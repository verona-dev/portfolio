---
import {Icon} from 'astro-icon/components';
import { Tooltip, TooltipTrigger, TooltipContent } from '@/components/starwind/tooltip';
const {
   name,
   icon,
   description,
   url,
} = Astro.props;
---


<div class='tech-item mx-7 lg:mx-5 my-10'>
    <Tooltip openDelay={400}>
        <TooltipTrigger>
            <div class='tech-icon opacity-0'>
                <Icon
                    name={icon}
                    class='w-12 h-12 mx-8'
                />

                <p class='my-5'>{ name }</p>
            </div>
        </TooltipTrigger>

        <TooltipContent side='bottom'>

            <div class='card card-side bg-base-100 shadow-sm'>
                <figure>
                    <img
                        src='https://img.daisyui.com/images/stock/photo-1635805737707-575885ab0820.webp'
                        alt='Movie' />
                </figure>

                <div class='card-body'>
                    <h4 class='card-title inline'>{ name }</h4>

                    <span>{description}</span>

                    <div class='card-actions justify-center'>
                        <button class='btn btn-soft'>
                            Learn more
                        </button>

                        <a
                            href={url}
                            target='_blank'
                            rel='noopener noreferrer'
                            aria-label='Link to description'
                            class='btn btn-soft'
                        >
                            Learn more
                        </a>
                    </div>
                </div>
            </div>
        </TooltipContent>
    </Tooltip>
</div>

<style>
    .tech-item {
        align-items: center;
        display: flex;
        flex-direction: column;

        &:hover {
            cursor: pointer;
        }

        &:hover svg,
        &:hover p {
            opacity: 0.8;
        }

        /*  Tooltip content */
        .starwind-tooltip-content {
            background-color: var(--color-zinc-900);
            display: none;
            //font-size: 14px;
            //padding: 40px;
            padding: 5px;
            --tooltip-offset: calc(100% - 15px) !important;
            white-space: normal;
            width: 400px;

            &:hover {
                cursor: auto;
            }

            /* Tablet/Mobile */
            @media (max-width: 900px) {
                //padding: 40px 20px;
                //width: 70vw;
            }
        }
    }
</style>