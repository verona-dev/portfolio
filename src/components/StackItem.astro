---
import {Icon} from 'astro-icon/components';
import { Tooltip, TooltipTrigger, TooltipContent } from '@/components/starwind/tooltip';
const { name, icon, description, url } = Astro.props;
---


<div class='icon-container'>
    <Tooltip>
        <TooltipTrigger>
            <div>
                <Icon
                    name={icon}
                    class='w-12 h-12'
                />

                <p>{ name }</p>
            </div>
        </TooltipTrigger>

        <TooltipContent>
           <div>
               <a
                   href={url}
                   target='_blank'
                   rel='noopener noreferrer'
                   aria-label='Link to description'
               >
                   <Icon
                       name='arcticons:easy-open-link'
                       class='open-link-in-tab w-6 h-6'
                   />
               </a>

               <p>{description}</p>
           </div>
        </TooltipContent>
    </Tooltip>
</div>

<style>
    .icon-container {
        align-items: center;
        display: flex;
        flex-direction: column;
        margin: 20px;
        
        &:hover {
            cursor: pointer;
        }

        a {
            display: inline-block;
        }

        svg {
            margin: 0 25px;
        }

        p {
            margin: 5px 0;
        }

        .starwind-tooltip-content {
            background-color: var(--color-zinc-900);
            border-radius: 8px;
            padding: 35px 30px 50px;
            white-space: normal;
            width: 500px;

            &:hover {
                cursor: auto;
            }
        }

        .open-link-in-tab {
            position: absolute;
            right: 10px;
            top: 25px;

            &:hover {
                color: var(--color-pink-400);
            }
        }
    }
</style>