---
import {Icon} from 'astro-icon/components';
const { name, icon } = Astro.props;
---


<div class='icon-container'>
    <Icon
        name={icon}
        class='w-12 h-12'
    />
    <p>{ name }</p>
</div>

<style>
    .icon-container {
        align-items: center;
        display: flex;
        flex-direction: column;
        margin: 15px;

        svg {
            margin: 0 25px;
        }

        p {
            margin: 5px 0;
        }
    }
</style>