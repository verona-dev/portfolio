---
import { Avatar, AvatarImage, AvatarFallback } from '@/components/starwind/avatar';
---

<div class='hero my-20 text-center'>
    <Avatar class='border-pink-400'>
        <AvatarImage
            src='https://i.pravatar.cc/500?u=a04258a2462d826712d'
            alt='John Doe'
        />
        <AvatarFallback>JD</AvatarFallback>
    </Avatar>

    <h1
        class='title text-5xl md:text-8xl my-8'
        set:html='Zoran G. Verona'
    />


    <p
        class='tagline my-6 text-pink-400 text-1xl md:text-3xl tracking-widest uppercase'
        set:html='Frontend Developer'
    />

    <p
        class='subtitle'
        set:html='Based in Croatia, Europe, with 3+ years of development experience. I am a web developer who enjoys building sites that are both fun and functional.'
    />
</div>

<style>
    figure {
        margin: 0 auto;
        height: 300px;
        width: 300px;
    }
</style>
