---
import {SEO} from 'astro-seo';
const { title, description } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const imageUrl = 'https://res.cloudinary.com/dgcyv1ehi/image/upload/v1746455877/portfolio/ruabudfjanqwwc1ywgqk.jpg';
---


<SEO
    title={title}
    description={description}
    canonical={canonicalUrl}
    meta={[
       {
          name: 'keywords',
          content: 'portfolio, website, web development, frontend,',
       },
    ]}
    extend={{
       meta: [
          { name: 'keywords', content: 'zoran g verona, portfolio, website' },
       ],
       link: [
          { rel: 'canonical', href: canonicalUrl },
       ],
    }}
    openGraph={{
       basic: {
          url: canonicalUrl,
          type: 'website',
          title: title,
          image: imageUrl,
       },
       image: {
          url: imageUrl,
          alt: 'Portfolio main image',
       },
    }}
    twitter={{
       card: 'summary_large_image',
       title,
       description,
       image: imageUrl,
    }}
/>