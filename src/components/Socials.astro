---
import { Icon } from 'astro-icon/components';
---

<div class='socials self-center flex justify-around w-full lg:w-3/4'>
    <div class='social-item'>
        <a
            href='https://github.com/verona-dev'
            target='_blank'
            rel='noopener noreferrer'
            aria-label='Github profile'
            class='btn'
        >
            <Icon
                name='hugeicons:github'
                class='w-6 h-6'
            />

            <span class='ml-1'>Github</span>
        </a>
    </div>

    <div class='social-item'>
        <a
            href='https://linkedin.com/in/zoran-g-verona-489650328'
            target='_blank'
            rel='noopener noreferrer'
            aria-label='Linkedin profile'
            class='btn'
        >
            <Icon
                name='hugeicons:linkedin-01'
                class='w-6 h-6'
            />
            <span class='ml-1'>Linkedin</span>
        </a>
    </div>

    <div class='social-item'>
        <a
            id='email'
            target='_blank'
            rel='noopener noreferrer'
            aria-label='Send email'
            class='btn'
        >
            <Icon
                name='hugeicons:mail-01'
                class='w-6 h-6'
            />
            <span class='ml-1'>Email</span>
        </a>
    </div>
</div>

<style>
    .socials {
        a {
            --btn-bg: #0000;
            transition: all .15s ease-in-out;
            border-style: dashed;
            --btn-border: var(--color-zinc-700);

            &:hover {
                //border-style: solid;
                --btn-border: var(--color-pink-400);
                //--btn-fg: var(--color-pink-300);
                transform: scale(1.15);
            }
        }
    }
</style>

<script>
   const encEmail = 'dmVyb25hZGV2QHR1dGEuaW8=';
   const mail = document.getElementById('email');
   mail?.setAttribute('href', 'mailto:'.concat(atob(encEmail)));
</script>