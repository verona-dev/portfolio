---
import { Icon } from 'astro-icon/components';
---

<div class='socials'>
    <div class='container max-w-2xl mx-auto'>
        <a
            href='https://github.com/verona-dev'
            target='_blank'
            aria-label='Github profile'
        >
            <Icon
                name='arcticons:github'
                class='w-10 h-10'
            />
        </a>

        <a
            href='https://linkedin.com/in/zoran-g-verona-489650328'
            target='_blank'
            aria-label='Linkedin profile'
        >
            <Icon
                name='arcticons:linkedin'
                class='w-10 h-10'
            />
        </a>

        <a
            href='mailto:veronadev@tuta.io'
            target='_blank'
            rel='noopener noreferrer'
            aria-label='Personal email'
        >
            <Icon
                name='arcticons:yahoo-mail'
                class='w-10 h-10'
            />
        </a>
    </div>
</div>

<style>
    .socials {
        padding-left: 100px; /* Header width */

        .container {
            display: flex;
            justify-content: space-evenly;
            padding: 75px;

            a:hover {
                color: var(--color-pink-400);
            }
        }
    }
</style>