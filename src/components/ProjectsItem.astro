---
import { Image } from 'astro:assets';
import {Icon} from 'astro-icon/components';
import { Button } from '@/components/starwind/button';

const {
   id,
   thumbnail,
   title,
   tagline,
   description,
   url,
   tech,
   image,
   video
} = Astro.props;

---

<div class='projects-item opacity-0'>
    <!--  Modal Trigger  -->
    <Image
        onclick={`my_modal_${id}.showModal()`}
        src={thumbnail}
        class='thumbnail'
        alt='Project image'
        width='250'
        height='250'
    />

    <!--  Modal Content  -->
    <dialog
        id={`my_modal_${id}`}
        class='modal'
    >
        <div class='modal-box flex h-full w-full max-w-full lg:h-auto lg:max-w-3xl px-0 py-8 md:px-14 lg:px-10'>
            <form method='dialog'>
                <button class='btn btn-lg btn-circle btn-ghost absolute right-2 top-2 z-100'>
                    <Icon
                        name='iconoir:xmark'
                        class='w-6 h-6'
                    />
                </button>
            </form>

            <div class='card shadow-sm py-10 lg:py-0'>
                <div class='card-body gap-4 md:gap-6'>
                    <!--  Media  -->
                    <div class='media-container flex'>
                       {
                          video && (
                               <video
                                   id='my-video'
                                   controls
                                   class='video-js'
                               >
                                   <source src={video} type='video/webm'>
                                   Your browser does not support HTML video.
                               </video>
                          )
                       }

                       {
                          image && (
                               <figure class='max-h-[350px] mx-auto'>
                                   <Image
                                       src={image}
                                       alt='Project image'
                                       width='300'
                                       height='250'
                                   />
                               </figure>
                          )
                       }
                    </div>

                    <!--  Title  -->
                    <h4>{ title }</h4>

                    <!--  Badges  -->
                    <div>
                        <ul class='badges flex gap-2.5 flex-wrap'>
                           {
                              tech.stack.map((item, index) =>
                                  <li key={index} class='badge badge-primary'>{item}</li>
                              )
                           }
                        </ul>

                        <ul class='badges flex gap-2.5 flex-wrap'>
                           {
                              tech.modules.map(item =>
                                  <li class='badge badge-dash'>{item}</li>
                              )
                           }
                        </ul>
                    </div>

                    <!--  Tagline  -->
                   {
                      tagline && (
                           <div
                               role='alert'
                               class='alert alert-warning alert-soft my-2 lg:my-0'
                           >
                               <Icon
                                   name='hugeicons:information-circle'
                                   class='w-6 h-6'
                               />
                               <span class='text-base text-warning'>{ tagline }</span>
                           </div>
                      )
                   }

                    <!--  Description  -->
                    <p class='mb-6'>{ description }</p>

                    <!--  Link to website  -->
                    <Button
                        id='button'
                        href={url}
                        target='_blank'
                        rel='noopener noreferrer'
                        aria-label={`${title} website`}
                        disabled={!url}
                        class='my-6 lg:my-0'
                    >
                       { url ? 'Visit Website' : '\uD83D\uDC94 Website not available \uD83D\uDC94' }
                    </Button>
                </div>
            </div>
        </div>

        <form method='dialog' class='modal-backdrop'>
            <button>close</button>
        </form>
    </dialog>
</div>

<style>
    .projects-item {
        img.thumbnail {
            border-radius: 16px;
            transition: all .25s;
            filter: brightness(0.95);

            &:hover {
                cursor: pointer;
                opacity: 1;
                transform: scale(1.12);
                filter: none;
            }

            /* Desktop */
            @media (min-width: 1024px) {
                height: 225px;
                opacity: 0.95;
                width: 320px;
            }
        }


        /* Desktop */
        @media (min-width: 1024px) {
            &:nth-of-type(1) img.thumbnail {
                border-radius: 32px 0 0 0;
            }

            &:nth-of-type(2) img.thumbnail {
                border-radius: 0 32px 0 0;
            }

            &:nth-of-type(3) img.thumbnail {
                border-radius: 0 0 0 32px;
            }

            &:nth-of-type(4) img.thumbnail {
                border-radius: 0 0 32px 0;
            }

            &:nth-of-type(2) img.thumbnail:hover,
            &:nth-of-type(3) img.thumbnail:hover {
                border-radius: 0 16px 0 16px;
            }

            &:first-child img.thumbnail:hover,
            &:last-child img.thumbnail:hover {
                border-radius: 16px 0 16px 0;
            }
        }


        .modal {
            &.modal-open, &[open], &:target {
                & .modal-box {
                    /* Desktop */
                    @media (min-width: 1024px) {
                        translate: 50px 0;
                    }
                }
            }

            & .modal-box {
                /* Desktop */
                @media (min-width: 1024px) {
                    translate: 50px 0;
                }

                /* Mobile */
                @media (max-width: 1023px) {
                    width: 100vw;
                }
            }
        }

        .card {
            .card-body {
                & :where(p) {
                    flex-grow: initial;
                }

                .media-container img {
                    border-top-left-radius: 8px;
                    border-top-right-radius: 8px;
                }

                .badges {
                    margin-bottom: 10px;

                    li.badge {
                        font-family: 'Roboto Mono', monospace;
                        font-weight: 100;
                        font-size: 1rem;
                        padding: 14px;
                    }
                }

                a, button {
                    font-family: 'FuturaMedium', monospace;
                    letter-spacing: 0.2em;
                    word-spacing: 0.25em;
                    text-transform: uppercase;

                    /* Mobile */
                    @media (max-width: 1023px) {
                        font-size: 0.75rem;
                    }
                }

                figure,
                .media-container img,
                video {
                    height: 100% !important;
                    margin: 0 auto;
                    width: 100% !important;
                }

                figure {
                    /* Mobile */
                    @media (max-width: 1023px) {
                        width: 75% !important;
                    }
                }

                .video-js {
                    background: transparent !important;
                    height: 350px;
                    margin: 0 auto;
                    width: 80%;

                    /* Mobile */
                    @media (max-width: 640px) {
                        height: 250px !important;
                        width: 100%;
                    }
                }
            }
        }
    }
</style>

<script>
   import videojs from 'video.js';
   import 'video.js/dist/video-js.css';

   document.addEventListener('DOMContentLoaded', () => {
      const player = videojs('my-video', {
         autoPlay: true,
         loop: false,
         controls: true,
         preload: 'auto',
         muted: true,
      });
      player.load();
   });
</script>