---
import {Icon} from 'astro-icon/components';
import Logo from './Logo.astro';
const currentPath = Astro.url.pathname;
const isActive = path => currentPath === path ? 'active' : '';
const {
   href,
   label,
   icon
} = Astro.props;
---

<li>
    <a
        href={href}
        class={isActive(`${href}`)}
        aria-label={label}
    >
       {
          icon &&
           <Icon
               name={icon}
               class='w-10 h-10'
           />
       }

       {
          label === 'Home' && <Logo />
       }

        <span>{label}</span>
    </a>
</li>
