---
import data from '../assets/data/tech.json';
import Layout from '../layouts/Layout.astro';
import TechItem from '../components/TechItem.astro';
---

<Layout
    title='Tech stack'
    description='My tech stack and skills'
>
    <section class='sidebar-layout max-w-3xl'>
        <h3>
            <span>The</span>
            <span class='double-underline-container'>tools<span class='underline-first-line'></span><span class='underline-second-line'></span></span>
            <span>I use</span>
        </h3>

        <div class='py-6 flex justify-center flex-wrap'>
           {
              data?.tech?.map(item => (
                  <TechItem
                      key={item.name}
                      name={item.name}
                      icon={item.icon}
                      description={item.description}
                      url={item.url}
                  />
              ))
           }
        </div>
    </section>
</Layout>

<script>
   import { gsap } from 'gsap';

   const techItem = document.querySelectorAll('.tech-icon');
   const underline = document.querySelector('.underline-first-line');
   const underline2 = document.querySelector('.underline-second-line');
   const timeline = gsap.timeline({
      defaults: {
         duration: 1,
      }
   });

   timeline
      .to(techItem, {
         delay: 1,
         opacity: 1,
         stagger: 0.25,
         ease: 'sine.inOut',
      })
      .to(underline, {
         duration: 0.5,
         ease: 'sine.out',
         width: '100%',
      })
      .to(underline2, {
         duration: 4,
         ease: 'elastic.out',
         width: 'calc(105% + 5px)',
      });
</script>