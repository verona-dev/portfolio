<style lang='scss'>
    .projects {
        border: 1px solid var(--color-pink-400);
        border-radius: 8px;


        .image-container {
            align-items: center;
            align-content: center;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;

            img {
                border: 1px solid transparent;
                margin: 20px;
                
                &:hover {
                    border: 1px solid var(--color-pink-400);
                    cursor: pointer;
                }
            }
        }
