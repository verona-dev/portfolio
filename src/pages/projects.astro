---
import data from '../assets/data/projects.json';
import Layout from '../layouts/Layout.astro';
import ProjectsItem from '../components/ProjectsItem.astro';
---

<Layout
    title='Projects'
    description='Projects I worked on'
>
    <section class='projects opacity-0 page max-w-4xl'>
        <h3 class='mb-20 text-center'>
            <span>The</span>
            <span class='underline-container'>projects<span class='underline'></span><span class='underline2'></span></span>
            <span>I worked on</span>
        </h3>

        <div class='image-container'>
           {
              data.projects.map(project => (
                  <ProjectsItem
                      key={project.id}
                      id={project.id}
                      thumbnail={project.thumbnail}
                      title={project.title}
                      tagline={project.tagline}
                      description={project.description}
                      url={project.url}
                      tech={project.tech}
                      image={project.image}
                      video={project.video}
                  />
              ))
           }
        </div>
    </section>
</Layout>

<style>
    .projects {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        .image-container {
            align-content: center;
            align-items: center;
            display: flex;
            flex-wrap: wrap;
            gap: 50px;
            justify-content: center;
        }

        h3 {
            text-shadow: 0 0.5rem 2rem, 0 -0.5rem 1rem rgba(80, 76, 76, 0.75);
        }

        .underline-container {
            position: relative;
        }

        .underline,
        .underline2 {
            display: block;
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: var(--color-pink-400);
            border-radius: 12px;
        }

        .underline2 {
            left: -5px;
            bottom: -12px;
            background-color: var(--color-emerald-500);
        }
    }
</style>

<script>
   import { gsap } from 'gsap';
   const projects = document.querySelector('.projects');
   const h3 = document.querySelector('h3');
   const underline = document.querySelector('.underline');
   const underline2 = document.querySelector('.underline2');
   const thumbnail = document.querySelectorAll('.projects-item');
   const timeline = gsap.timeline({
      defaults: {
         duration: 1,
         ease: 'expo.in',
      }
   });

   timeline
      .to(projects, {
         opacity: 1,
      })
      .from(h3, {
         y: '-25vh',
         ease: 'circ',
      })
      .fromTo(thumbnail, {
         opacity: 0,
      }, {
         opacity: 1,
         stagger: 1,
      })
      .to(underline, {
         delay: 0.5,
         ease: 'sine.out',
         width: '100%',
      })
      .to(underline2, {
         delay: 0.5,
         duration: 4,
         ease: 'elastic.out',
         width: 'calc(105% + 5px)',
      });
</script>